products([
		["Banana",1], 
		["Apple",2], 
		["Pinapple",2.5]
		]).
!start.

+!start : products(List) <-
	.length(List,LLenght);
	-+listSize(0);
	while(listSize(Sz) & Sz < LLenght)
	{        
		.random(Y);
		.nth(Sz,List,Item);
		.nth(0,Item,Name);
		.nth(1,Item,Price);
		.print("Product(",Sz,"): ",Name," $",Price);
		-+listSize(Sz+1);
    }.

